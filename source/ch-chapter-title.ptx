<chapter xml:id="ch-chapter-title" xmlns:xi="http://www.w3.org/2001/XInclude">
  <title>Chapter Title</title>

  <introduction>
    <p>Example Sage plot image. </p>
  </introduction>

  <figure xml:id="figure-sage-double-plot-1">
    <caption>Two Sage plots on one set of axes</caption>
    <image xml:id="sageplot-updown-1" width="45%">
      <sagemath>
      f(x) = x^4
      g(x) = -x^4
      up = plot(f, (x, -1.5, 1.5), color='blue', thickness=2)
      down = plot(g, (x, -1.5, 1.5), color='red', thickness=2)
      up + down
      </sagemath>
    </image>
  </figure>

